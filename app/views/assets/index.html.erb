<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Assets</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all the assets in your system, detailing their type, status, and related actions.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <!-- This button can be adjusted or removed depending on whether you can add assets via the UI -->
      <button type="button" class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Add Asset</button>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">serial number</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">More Info</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% if @assets.any? %>
  <% @assets.each do |asset| %>
    <tr>
      <td class="whitespace-nowrap px-3 py-5 text-sm text-indigo-500">
        <%= asset['serial_number'] %>
      </td>
      <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
        <%= asset['status']['name'] %>
      </td>
      <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
        <!-- Link to asset details -->
        <%= link_to "View Details", asset_path(asset['id']), class: "text-indigo-600 hover:text-indigo-900" %>
      </td>
    </tr>
  <% end %>
<% else %>
  <tr>
    <td colspan="4" class="whitespace-nowrap px-3 py-5 text-sm text-center text-gray-500">
      No assets found.
    </td>
  </tr>
<% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
